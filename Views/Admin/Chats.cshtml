<style>
    div.panel-body {
        overflow: scroll;
        width: 1100px;
        height: 300px;
    }
</style>
<br>
<div class="text-center">
<h1>Customer Services</h1>
</div>
<div class="chat-panel panel panel-default">
    <div class="panel-body" id="chat">
        <input type="hidden" id="displayname"/>
        @{
            var x = ViewBag.items;
            foreach (var i in x)
            {
                if (i.nama == "Admin")
                {
        <p style="color:red; text-align:left;">Admin</p>
        <p style="color:red; text-align:left;">
        <strong><img src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_7.png" title="Admin"></strong>@i.pesan</p>
                }
                else if (i.nama != "Admin")
                {
        <p style="color:black; text-align:right;">User</p>
        <p style="color:black; text-align:right;">
        <strong><img src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_71.png" title="User"></strong>@i.pesan</p>
                }
            }
        }
        <p id="discussion"></p>
    </div>
    <div class="text-center">
    <div class="panel-footer">
        <br>
        <div class="input-group">
            <input id="user" type="hidden" name="user" class="form-control input-sm" placeholder="Name" value="Admin"/>
            <input id="read" type="hidden" name="read" class="form-control input-sm" placeholder="Name" value="Read"/>
            <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Message"/>
            <span class="input-group-btn">
                <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Send" style="width: 300px; height: 38px;">
            </span>
            </div>
        <br>
        </div>
        <br>
    </div>
</div>
<div class="text-center">
    <button class="btn btn-block btn-secondary" onclick="location.href='/Admin/Data'">Administrator Page</button>
</div>
    @section Scripts
    {
        <script>
           $(document).ready(function () {
    
            let connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

            connection.start().then(function() {
                console.log("Berhasil");

                $('#sendmessage').on('click', function (event) {
                    event.preventDefault();
                    let user = $('#user').val();
                    let message = $('#message').val();
                    let read = $('#read').val();

                    connection.invoke("SendMessage", user, message)
                        .then(data => {
                            console.log('Berhasil kirim data')
                        }).catch(err => {
                        return console.error(err.toString());
                    })

                    connection.invoke("Read", read)
                        .then(data => {
                            console.log('Berhasil kirim data')
                        }).catch(err => {
                            return console.error(err.toString());
                        })
                });
                connection.on("GotAMessage", function (user, message) {
                   if (user == "Admin") 
                    {
                    // Add the message to the page.
                    $('#discussion').append('<p style="color:red;text-align:left;">'+'User'+'</p>' +'<p style="color:red; text-align:left;"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_7.png" title="Admin">'
                        + ' </strong> ' + message + '</p>');
                    }
                    else if (user != "Admin") 
                    {
                    // Add the message to the page.
                    $('#discussion').append('<p style="color:black;text-align:right;">'+'User'+'</p>' +'<p style="color:black; text-align:right;"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_71.png" title="User">'
                        + ' </strong> ' + message + '</p>');
                    }
                });

            }).catch(function (err) {
                return console.error(err.toString());
            });
                })
        </script>
    }