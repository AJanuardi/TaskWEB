<!DOCTYPE html>
<html>
<head>
<div class="text-center">
<h2>Administrator Page</h2>
</div>
<style>
#cookies {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#cookies td, #cookies th {
  border: 1px solid #ddd;
  padding: 8px;
}

#cookies tr:nth-child(even){background-color: #f2f2f2;}

#cookies tr:hover {background-color: #ddd;}

#cookies th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #4CAF50;
  color: white;
}
</style>
</head>
<body>
<br>
<button id="btn" type="button" class="btn btn-primary" value="update" onclick="location.href='/Admin/Export'">Export</button>
<br>
<br>
<form asp-action="Import" asp-controller="Admin" enctype="multipart/form-data">
  <input  type="file" id="Upload" name="Upload" value="Upload">
  <button type="submit" class="btn btn-success">Import</button>
</form>
<br>
<div class="text-center">
<table id="cookies">
  <tr>
    <th>Id</th>
    <th>Rating</th>
    <th>Nama</th>
    <th>Deskripsi</th>
    <th>Harga</th>
    <th>Action</th>
  </tr>
  @{
      <a href="https://localhost:5001/Admin/Edit">Edit</a>
      <br>
      <a href="https://localhost:5001/Admin/Add">Add</a>
      var x = ViewBag.items;
      foreach (var i in x)
      {
        <tr>
            <td>@i.id</td>
            <td>@i.rating</td>
            <td>@i.nama</td>
            <td>@i.deskripsi</td>
            <td>@i.harga</td>
            <td>
                <a href="https://localhost:5001/Admin/Remove/@i.id">Remove</a>
            </td>
        </tr>
      }
  }
</table>
</div>
</body>
</html>
